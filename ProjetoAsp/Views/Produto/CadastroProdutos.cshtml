@model ProjetoAsp.Models.Produto

<h2>Cadastro de Produto</h2>

<form asp-action="Cadastro" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" type="text" required />
    </div>
    <div>
        <label>Preço:</label>
        <input asp-for="Preco" type="number" required />
    </div>
    <div>
        <label>Quantidade:</label>
        <input asp-for="quantidade" type="number" required />
    </div>
    <button type="submit">Novo Cadastrado</button>
</form>